    <module>xdocreport-gae</module>
  </modules>
  <scm>
    <connection>scm:git:https://github.com/kovacsrobert/xdocreport.git/uberjar</connection>
    <developerConnection>scm:git:https://github.com/kovacsrobert/xdocreport.git/uberjar</developerConnection>
    <url>https://github.com/kovacsrobert/xdocreport/uberjar</url>
  </scm>
  <issueManagement>
    <system>Google Code</system>
    <url>http://code.google.com/p/xdocreport/issues/list</url>
  </issueManagement>
  <ciManagement>
    <system>Jenkins</system>
    <url>https://opensagres.ci.cloudbees.com/job/xdocreport/</url>
    <notifiers>
      <notifier>
        <address>pascal.leclercq@gmail.com</address>
